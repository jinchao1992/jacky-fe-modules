{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^6.6.1"
  },
  "scripts": {
    "changed": "lerna changed",
    "clean": "lerna run clean",
    "build": "lerna bootstrap --hoist && lerna run clean && lerna run build",
    "publish": "lerna publish from-package --yes --no-verify-access --no-git-reset",
    "test": "lerna run test",
    "version": "lerna version --no-git-tag-version"
  }
}

{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^6.6.1"
  },
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna bootstrap --hoist && lerna run clean && lerna run build",
    "publish": "lerna publish from-package --yes --no-verify-access",
    "watch": "lerna run --stream --no-sort --concurrency 9999 watch",
    "test": "lerna run test"
  }
}
